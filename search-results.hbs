<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
  <link rel="stylesheet" href="/style.css">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet"> <!-- Bootstrap Icons -->
  <title>Search Results</title>
</head>
<body>
  <nav>
    <h4>Jesse's Ticket App</h4>
    <form action="/search" method="GET">
      <input type="text" name="description" placeholder="Enter description" required>
      <button type="submit">Search</button>
    </form>
    <ul>
      <li><a href="/">Home</a></li>
      <li><a href="/profile">Profile</a></li>
      <li><a href="/auth/logout">Logout</a></li>
      <li><a href="/SubmitTicket">Submit A Ticket</a></li>
      <li><a href="/OpenTickets">Open Tickets</a></li>
    </ul>
  </nav>

  <table class="table table-bordered">
    <thead class="thead-dark">
      <tr>
        <th scope="col">Description</th>
        <th scope="col">Severity</th>
        <th scope="col">Action</th>
        <th scope="col">Date/Time</th>
        <th scope="col">Assigned To</th>
      </tr>
    </thead>
    <tbody>
      {{#if results.length}}
        {{#each results}}
          <tr>
            <td>{{this.description}}</td>
            <td>{{this.priority}}</td>
            <td>
              <a href="/viewuser/{{this.id}}" type="button" class="btn btn-light btn-small"><i class="bi bi-eye"></i> View</a>
              <a href="/editticket/{{this.id}}" type="button" class="btn btn-light btn-small"><i class="bi bi-pencil"></i> Edit</a>
              <a href="/profile/{{this.id}}" type="button" class="btn btn-light btn-small"><i class="bi bi-trash"></i> Delete</a>
            </td>
            <td>{{this.created_at}}</td>
            <td>{{this.assigned_to}}</td>
          </tr>
        {{/each}}
      {{else}}
        <tr>
          <td colspan="5" class="text-center">No results found</td>
        </tr>
      {{/if}}
    </tbody>
  </table>

  <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
</body>
</html>
